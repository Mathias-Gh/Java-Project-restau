<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javaprojectrestau.controller.AddExpenseController"
      spacing="10.0" alignment="CENTER" prefWidth="400.0" prefHeight="350.0">
      
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    
    <Label text="Ajouter une nouvelle dépense" style="-fx-font-size: 18; -fx-font-weight: bold"/>
    
    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nameField" promptText="ex: Achat de fournitures" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="Montant (€):" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="amountField" promptText="ex: 125.50" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Catégorie:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <ComboBox fx:id="categoryComboBox" promptText="Sélectionner une catégorie" 
                  GridPane.columnIndex="1" GridPane.rowIndex="3" editable="true"/>

        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="200.0" />
        </columnConstraints>
    </GridPane>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Annuler" onAction="#handleCancel" />
        <Button text="Ajouter la dépense" onAction="#handleAddExpense" styleClass="button-primary"/>
    </HBox>
</VBox>
