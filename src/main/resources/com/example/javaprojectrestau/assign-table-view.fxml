<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javaprojectrestau.controller.AssignTableController"
      spacing="10" alignment="TOP_CENTER" style="-fx-padding: 20">

    <Label text="Assigner une Table Ã  un Client" style="-fx-font-size: 18px; -fx-font-weight: bold"/>

    <TableView fx:id="tableView" prefHeight="200" prefWidth="600">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="75"/>
            <TableColumn fx:id="tailleColumn" text="Taille" prefWidth="150"/>
            <TableColumn fx:id="emplacementColumn" text="Emplacement" prefWidth="150"/>
            <TableColumn fx:id="disponibleColumn" text="Disponible" prefWidth="100"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Label text="ID Client:"/>
        <TextField fx:id="clientIdField" promptText="Entrez l'ID du client"/>
        <Label text="Commande:"/>
        <TextField fx:id="commandeField" promptText="Entrez la commande"/>
    </HBox>

    <Button text="Assigner la Table"
            onAction="#assignTableToClient"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
</VBox>
