<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.javaprojectrestau.controller.FinancialController"
            prefWidth="900.0" prefHeight="600.0">
    <top>
        <VBox spacing="10">
            <Label text="Rapport Financier" styleClass="header-label"/>
            <HBox spacing="10">
                <Label text="Période:" alignment="CENTER_RIGHT" />
                <DatePicker fx:id="startDatePicker" promptText="Date de début" />
                <Label text="au" alignment="CENTER" />
                <DatePicker fx:id="endDatePicker" promptText="Date de fin" />
                <Button text="Filtrer" onAction="#handleFilterByDate" styleClass="button-primary" />
                <Button text="Générer PDF" onAction="#handleGeneratePdf" styleClass="button-primary" />
                <Region HBox.hgrow="ALWAYS" />
                <Button text="Ajouter une Dépense" onAction="#handleAddExpense" styleClass="button-primary"/>
            </HBox>
            <Separator/>
        </VBox>
    </top>
    
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
            <Tab text="Dépenses">
                <VBox spacing="15.0">
                    <padding>
                        <Insets top="10.0" right="0.0" bottom="10.0" left="15.0"/>
                    </padding>
                    
                    <Label text="Liste des Dépenses" styleClass="header-label"/>
                    <TableView fx:id="expensesTableView" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="expenseIdColumn" text="ID" prefWidth="50"/>
                            <TableColumn fx:id="expenseNameColumn" text="Nom" prefWidth="200"/>
                            <TableColumn fx:id="expenseAmountColumn" text="Montant" prefWidth="100"/>
                            <TableColumn fx:id="expenseDateColumn" text="Date" prefWidth="150"/>
                            <TableColumn fx:id="expenseCategoryColumn" text="Catégorie" prefWidth="100"/>
                        </columns>
                    </TableView>
                    
                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Button text="Supprimer la dépense sélectionnée" onAction="#handleDeleteExpense" 
                                fx:id="deleteButton" styleClass="button-danger" disable="true"/>
                    </HBox>
                </VBox>
            </Tab>
            
            <Tab text="Recettes">
                <VBox spacing="15.0">
                    <padding>
                        <Insets top="10.0" right="0.0" bottom="10.0" left="15.0"/>
                    </padding>
                    
                    <Label text="Liste des Recettes" styleClass="header-label"/>
                    <TableView fx:id="revenueTableView" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="orderIdColumn" text="ID" prefWidth="50"/>
                            <TableColumn fx:id="orderDateColumn" text="Date" prefWidth="180"/>
                            <TableColumn fx:id="orderAmountColumn" text="Montant" prefWidth="100"/>
                            <TableColumn fx:id="orderStatusColumn" text="Statut" prefWidth="120"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
        </TabPane>
    </center>
    
    <left>
        <VBox spacing="15.0" prefWidth="300.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="0.0"/>
            </padding>
            
            <Label text="Résumé Financier" styleClass="header-label"/>
            
            <GridPane hgap="15" vgap="15">
                <Label text="Recettes:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label fx:id="revenueLabel" styleClass="financial-value" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                
                <Label text="Dépenses:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Label fx:id="expensesLabel" styleClass="financial-value" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                
                <Label text="Profit:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <Label fx:id="profitLabel" styleClass="financial-value" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" prefWidth="150.0" />
                </columnConstraints>
            </GridPane>
            
            <Label text="Dépenses par Catégorie" styleClass="header-label"/>
            <TableView fx:id="categoryTableView" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="categoryNameColumn" text="Catégorie" prefWidth="150"/>
                    <TableColumn fx:id="categoryTotalColumn" text="Montant" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </left>
    
    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
    </padding>
</BorderPane>
