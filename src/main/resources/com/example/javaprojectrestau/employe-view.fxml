<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.javaprojectrestau.controller.EmployeController">

    <top>
        <VBox>
            <Label text="Gestion des employés du restaurant" BorderPane.alignment="CENTER">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
                <padding>
                    <Insets top="10.0" bottom="10.0"/>
                </padding>
            </Label>
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <padding>
                    <Insets right="10.0" bottom="10.0"/>
                </padding>
                <Button text="Ajouter un nouvel employé" onAction="#handleAddEmploye"/>
                <Button text="Ajouter des heures travaillées" onAction="#handleAddHourWorked"/>            </HBox>
        </VBox>
    </top>
    <center>
        <VBox spacing="10.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <Label text="Détails de l'employé" style="-fx-font-weight: bold"/>
            <GridPane hgap="10" vgap="10">
                <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label fx:id="employeDetailsName" style="-fx-font-weight: bold" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                
                <Label text="heure de travail:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Label fx:id="employeDetailsWorking_hour" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="heure travaillé:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <Label fx:id="employeDetailsHour_worked" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                
                <Label text="poste attribué:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <Label fx:id="employeDetailsPost" style="-fx-font-weight: bold" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="300.0" prefWidth="300.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="300.0" prefWidth="300.0" />
                </columnConstraints>

            </GridPane>

            <TableView fx:id="employeTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" />
                    <TableColumn fx:id="nameColumn" text="Nom" />
                    <TableColumn fx:id="working_hourColumn" text="Heures de travail" />
                    <TableColumn fx:id="hour_workedColumn" text="Heures de travaillé" />
                    <TableColumn fx:id="postColumn" text="Poste" />
                </columns>
            </TableView>
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Supprimer" onAction="#handleDeleteEmploye"/>
            </HBox>
        </VBox>
    </center>
    
    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
    </padding>
</BorderPane>