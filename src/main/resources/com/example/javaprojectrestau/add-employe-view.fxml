<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javaprojectrestau.controller.AddEmployeController"
      spacing="10.0" alignment="CENTER" prefWidth="600.0" prefHeight="450.0">
      
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    
    <Label text="Ajouter un nouvel employé" style="-fx-font-size: 18; -fx-font-weight: bold"/>
    
    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nameField" promptText="ex Nom de l'employé" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="heure de travail:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Spinner fx:id="working_hourField" min="1" max="20" GridPane.columnIndex="1" GridPane.rowIndex="1" initialValue="1" editable="true"/>


        <Label text="quel poste ?:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="postField" promptText="ex: serveur" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="300.0" prefWidth="300.0" />
        </columnConstraints>
    </GridPane>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Annuler" onAction="#handleCancel" />
        <Button text="Ajouter l'employé" onAction="#handleAddEmploye" styleClass="button-primary"/>
    </HBox>
</VBox>
